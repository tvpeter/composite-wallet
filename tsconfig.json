{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./build",
    "sourceMap": true,
    "strict": true,
    "target": "ES2016",
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": ["src/**/*", "test/**/*"],
  "watchOptions": {
    "synchronousWatchDirectory": true
  }
}
